<!-- Modal -->
<head>
  <link rel="stylesheet" href="/stylesheets/chat.css">
</head>

<div class="modal" id="newMessageModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newChatModalTitle">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <textarea class="form-control" id="newMessageText" rows="3" placeholder="What would you like to say?"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-close" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="sendNewChat">Send</button>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="leftSide">
    <div class="header">
      <h2>Yakety</h2>
    </div>
    <div class="searchChat">
      <input id="findUser" class="form-control" placeholder="Find a user" autocomplete="off">
      <ul id="foundUsers">
      </ul>
    </div>
    <div class="chatlist">
      <ul id="chatsList" style="list-style: none;">
      </ul>
    </div>
  </div>
   
  <div class="rightSide">
    <div class="header">

    </div>  
    <div class="chatbox" id="messages">

    </div>
    
    <div class="chatInput">
      {{!-- <form class="messageForm" action=""> --}}
      <textarea class="form-control" id="messageContent" rows="2" placeholder="What would you like to say?"></textarea>
      <button id="sendMessage" class="button">Send</button>
      {{!-- </form> --}}
    </div>
  </div>
</div>
      

  <script id="location-message-template" type="text/html">
    <div>
      <p>
        <span class="message__name">{{username}}</span>
        <span class="message__meta">{{createdAt}}</span>
      </p>
      </div>
  </script>
  
  <script id="sidebar-template" type="text/html">
    <div>
      <h3 class="list-title">Users</h3>
      <ul class="users">
        {{#users}}
        <li> {{username}} </li>
        {{/users}}
      </ul>
    </div>
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/public/javascript/chat.js"></script>
</body>

</html>
